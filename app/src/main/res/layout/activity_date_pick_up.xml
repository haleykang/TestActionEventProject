<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.android.test.testactioneventproject.DatePickUpActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateChangeBt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text=""
        android:textSize="30dp"
        android:id="@+id/dateTextView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Change Date"
        android:textAllCaps="false"
        android:id="@+id/dateChangeBt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateChangeBt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="시/분 선택하기"
        android:textSize="15dp"
        android:id="@+id/toTimePickUpBt"/>



</RelativeLayout>
